{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "CONVEX_DEPLOYMENT",
    "VITE_CONVEX_URL",
    "VITE_CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "CONVEX_DEPLOYMENT",
        "VITE_CONVEX_URL",
        "VITE_CLERK_PUBLISHABLE_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
